<div class="page-header">
  <h1>
    <%= "@#{@duel.winner.nickname} v.s. @#{@duel.loser.nickname}" %>
    <small><%= @duel.date %></small>
  </h1>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    対戦日
  </div>
  <div class="panel-body">
    <%= @duel.date %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    勝者
  </div>
  <div class="panel-body">
    <%= link_to("https://twitter.com/#{@duel.winner.nickname}") do %>
      <%= image_tag @duel.winner.image_url %>
      <%= "@#{@duel.winner.nickname}" %>
    <% end %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    敗者
  </div>
  <div class="panel-body">
    <%= link_to("https://twitter.com/#{@duel.loser.nickname}") do %>
      <%= image_tag @duel.loser.image_url %>
      <%= "@#{@duel.winner.nickname}" %>
    <% end %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    残りライフポイント
  </div>
  <div class="panel-body">
    <%= @duel.life_points %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    内容
  </div>
  <div class="panel-body">
    <%= @duel.content %>
  </div>
</div>
