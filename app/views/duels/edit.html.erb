<% now = Time.zone.now %>

<div class="page-header">
  <h1>デュエルを編集する</h1>
</div>

<%= form_for(@duel, html: { class: 'form-horizontal' }) do |f| %>
  <% if @duel.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% @duel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :winner_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :winner_id, User.all.order(:nickname), :id, :nickname, { }, { class: 'form-control' } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :loser_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :loser_id, User.all.order(:nickname), :id, :nickname, { }, { class: 'form-control' } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.date_field :date, start_year: now.year - 1, end_year: now.year, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :life_points, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :life_points, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: 'form-control', row: 3 %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '更新する', class: 'btn btn-default', data: { disabel_with: '更新中……' } %>
    </div>
  </div>
<% end %>
