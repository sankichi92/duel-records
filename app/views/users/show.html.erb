<% t = Time.now %>
<div class="page-header">
  <h1>
    <%= "@#{@user.nickname} の戦績" %>
  </h1>
</div>
<%= form_tag('', method: 'get', class: 'form-inline', enforce_utf8: false) do %>
  <%= date_field_tag :start, params[:start] ? params[:start] : (t - 30*24*60*60).strftime("%Y-%m-%d"), class: 'form-control' %>
  〜
  <%= date_field_tag :end, params[:end] ? params[:end] : t.strftime("%Y-%m-%d"), class: 'form-control' %>
  <%= submit_tag '期間を指定', class: 'btn btn-default', name: nil %>
<% end %>
<hr>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>対戦相手</th>
        <th>デュエル数</th>
        <th>勝利数</th>
        <th>敗北数</th>
        <th>勝率</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td><%= "@#{u.nickname}" %></td>
          <td><%= sum =  @duels.played_by(u.id).count %></td>
          <td><%= win =  @duels.where(loser_id: u.id).count %></td>
          <td><%= sum - win %></td>
          <td><%= sum == 0 ? '- ' : (win.to_f / sum).round(4) * 100 %>%</td>
        </tr>
      <% end %>
      <tr>
        <td>合計</td>
        <td><%= sum =  @duels.count %></td>
        <td><%= win =  @duels.where(winner_id: @user.id).count %></td>
        <td><%= sum - win %></td>
        <td><%= sum == 0 ? '- ' : (win.to_f / sum).round(4) * 100 %>%</td>
      </tr>
    </tbody>
  </table>
</div>
<hr>
<div class="list-group">
  <%= render @duels %>
</div>
<p class="text-right">
  <%= link_to '退会する', retire_user_path %>
</p>
